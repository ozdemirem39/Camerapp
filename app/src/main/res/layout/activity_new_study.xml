<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewStudyActivity">

    <!-- Çalışma adı için giriş alanı -->
    <EditText
        android:id="@+id/study_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Study Name (Optional)"
        android:inputType="text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Çalışmayı başlat butonu -->
    <Button
        android:id="@+id/start_study_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Study"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/study_name_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>